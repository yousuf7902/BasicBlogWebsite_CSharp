@model BlogProjectC_.BlogTable

@{
    ViewBag.Title = "Uploadblog";
}

<h2>Add New Blog Details</h2>
<hr/>


@using (Html.BeginForm("Uploadblog", "Blog", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal ">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group mt-3 mb-3">
        @*@Html.LabelFor(model => model.BCategory, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <h5>Blog Category</h5>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.BCategory, new { htmlAttributes = new { @class = "form-control" } })*@
            <select name="@Html.NameFor(model => model.BCategory)">
                <option value="" selected disabled>-- Select Blog Category --</option>
                <option>Code</option>
                <option>DataStructure</option>
                <option>Algorithm</option>
            </select>
            @Html.ValidationMessageFor(model => model.BCategory, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3 mb-3">
        <h5>Blog Title</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BTitle, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group mt-3 mb-3">
        <h5>Blog Descriptions</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BDesc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3 mb-3">
        <h5>Blog Referencelink</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BUrl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BUrl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3 mb-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Insert Blog" class="btn btn-dark btn-sm" />
        </div>
    </div>
    <h3>@ViewBag.message</h3>
</div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
