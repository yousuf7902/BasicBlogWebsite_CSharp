@model BlogProjectC_.RegistrationTable

@{
    ViewBag.Title = "Registration";
}

<h2>New User Registration</h2>


@using (Html.BeginForm("Registration", "Blog", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Uname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 mt-3 mb-3">
            @Html.EditorFor(model => model.Uname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Uname, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Uemail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 mt-3 mb-3">
            @Html.EditorFor(model => model.Uemail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Uemail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Upass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 mt-3 mb-3">
            @Html.EditorFor(model => model.Upass, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Upass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ugender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 mt-3 mb-3">
            @Html.Label("Male")
            @Html.RadioButtonFor(model => model.Ugender, "M")
            @Html.Label("Female")
            @Html.RadioButtonFor(model => model.Ugender, "F")
            @Html.ValidationMessageFor(model => model.Ugender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-3 mb-3">
            <input type="submit" value="Register" class="btn btn-dark btn-sm" />
        </div>
    </div>

    <h3>@ViewBag.Message</h3>
</div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
